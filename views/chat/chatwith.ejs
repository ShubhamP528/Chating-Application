<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<link rel="stylesheet" type="text/css" href="/chatwith/style/style.css">
<script src="/socket.io/socket.io.min.js"></script>

<style>
    .right {
        text-align: right;
        margin-left: auto;
        background-color: #dcf8c6; 
    }

    .left{
        margin-right: auto;
        background-color: #fefffe; 
    }

   .right, .left{
        max-width: 85vw;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 15px;
    }

    .main {
        width: 100%;
        max-width: 95vw;
        background-color: rgba(255, 255, 255, 0);
        border-radius: 4px;
        padding: 25px;
        display: flex;
        flex-direction: row;
        gap: 5px;
        position: fixed;
        bottom: 0;
    }

    .main h1 {
        text-align: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .main textarea {
        width: 100%;
        height: 50px;
        outline: none;
        padding: 5px;
        font-size: 18px;
        border-radius: 5px;
        border: 2px solid #96a340;
        resize: none;
        max-height: 150px;
        background-color: #f8fbfb00;
    }
    .main textarea:focus{
        background-color: #f8fbfb00;
    }

    textarea::-webkit-scrollbar {
        width: 0px;
    }

    #list {
        overflow-y: scroll;
        height: 70vh;
        /* border: 2px solid #ccc; */
        /* border-radius: 10px; */
        padding: 5px;
        /* background-color: #e5ddd5; */
        overflow-wrap: anywhere;
        font-size: 18px;
        /* background: rgba(255, 255, 255, 0.15); */
        /* box-shadow: 0 8px 32px 0 rgb(31, 38, 135, 0.37); */
        /* backdrop-filter: blur(8.5px); */
    }

    #list::-webkit-scrollbar{
        width: 0px;
    }

    .outer{
        width: 95vw;
    }

    /* Media Queries */
    @media screen and (max-width: 768px) {
        .main {
            width: 100%;
            /* max-width: 100%; */
            padding: 10px;
            /* gap: 10px; */
        }
        .main textarea {
            height: 35px;
            font-size: 16px;
        }
        #list {
            height: 70vh;
            font-size: 16px;
        }
    }

    @media screen and (max-width: 480px) {
        .main textarea {
            height: 30px;
            font-size: 12px;
        }
        #list {
            height: 60vh;
            font-size: 12px;
        }
    }

    @media screen and (max-width: 290px) {
        .main textarea {
            height: 25px;
            font-size: 10px;
        }
        #list {
            height: 60vh;
            width: 90vw;
            font-size: 10px;
        }
    }
.btnChat{
    background-image: url(https://cdn-icons-png.flaticon.com/512/2161/2161491.png);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    height: 50px;
    width: 5vw;
    border: none;
}

    
</style>



<body style="background-color: #85FFBD;
background-image: url(https://camo.githubusercontent.com/cba518ead87b032dc6f1cbfc7fade27604449201ac1baf34d889f77f093f01ac/68747470733a2f2f7765622e77686174736170702e636f6d2f696d672f62672d636861742d74696c652d6461726b5f61346265353132653731393562366237333364393131306234303866303735642e706e67);">
    <div class="outer" style="margin: 20px auto">
        <div hidden id="user"><%=currUser.username%></div>
        <div id="list" style="display: flex; flex-direction: column;"></div>

        <div class="main">
            <input hidden type="text" id="username" value="<%=name.username %>">
            <input hidden type="text" id="to" value="<%=username %>" placeholder="send to(default every one)">
            <textarea class="form-control" name="msg" id="message" placeholder="Typing something to send......."
                required></textarea>
            <div class="btn btnChat" ></div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
        crossorigin="anonymous"></script>
    <script src="/script/chatwith.js"></script>
</body>
</html>
