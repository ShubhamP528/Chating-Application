
<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<script src="/socket.io/socket.io.min.js"></script>




<body>
    <div style="width: 60vw; margin: 100px auto">
     
        <div class="chat">
            <div class=" mb-3">
                <h4 class="display-5">Chat here</h4>
                <label for="mesage" class="form-label">Message</label>
                <input hidden type="text" id="username" value="<%=name.username %>">
                <input hidden type="text" id="to" value="<%=username %>" placeholder="send to(default every one)">
                <textarea class="form-control" name="msg" id="message" cols="20" rows="4"></textarea>
            </div>
            <br>
            <button class="btn btn-success btnChat">Send</button>

            <div id="list" style="display: flex; flex-direction: column;"></div>
        </div>
        
    </div>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
    <script src="/script/chatwith.js"></script>
</body>
</html>