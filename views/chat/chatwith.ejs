<%- include("../partials/header") %>
<%- include("../partials/navbar") %>
<link rel="stylesheet" type="text/css" href="/chatwith/style/style.css">
<script src="/socket.io/socket.io.min.js"></script>

<style>
    .right {
        text-align: right;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        background-color: #dcf8c6;
    }

    .left {
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        background-color: #e5ddd5;
    }

    .main {
        width: 100%;
        max-width: 60vw;
        background-color: white;
        border-radius: 4px;
        padding: 25px;
        display: flex;
        flex-direction: row;
        gap: 5px;
        position: fixed;
        bottom: 0;
    }

    .main h1 {
        text-align: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .main textarea {
        width: 100%;
        height: 50px;
        outline: none;
        padding: 5px;
        font-size: 18px;
        border-radius: 5px;
        border: 2px solid #96a340;
        resize: none;
        max-height: 150px;
    }

    textarea::-webkit-scrollbar {
        width: 0px;
    }

    #list {
        overflow-y: scroll;
        height: 70vh;
        border: 2px solid #ccc;
        padding: 5px;
    }

    /* Media Queries */
    @media screen and (max-width: 768px) {
        .main {
            width: 100%;
            /* max-width: 100%; */
            padding: 10px;
            flex-direction: column;
            /* gap: 10px; */
        }
        .main textarea {
            height: 35px;
            font-size: 16px;
        }
        #list {
            height: 70vh;
        }
    }

    @media screen and (max-width: 480px) {
        .main textarea {
            height: 30px;
            font-size: 12px;
        }
        #list {
            height: 70vh;
        }
    }

    @media screen and (max-width: 290px) {
        .main textarea {
            height: 25px;
            font-size: 10px;
        }
        #list {
            height: 60vh;
        }
    }
    
</style>

<body>
    <div style="width: 60vw; margin: 20px auto">
        <div hidden id="user"><%=currUser.username%></div>
        <div id="list" style="display: flex; flex-direction: column;"></div>

        <div class="main mb-3">
            <input hidden type="text" id="username" value="<%=name.username %>">
            <input hidden type="text" id="to" value="<%=username %>" placeholder="send to(default every one)">
            <textarea class="form-control" name="msg" id="message" placeholder="Typing something to send......."
                required></textarea>
            <button class="btn btn-success btnChat">Send</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
        crossorigin="anonymous"></script>
    <script src="/script/chatwith.js"></script>
</body>
</html>
